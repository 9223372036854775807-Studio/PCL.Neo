	<Style Selector="ListBox.navbar">
		<Setter Property="Height" Value="48"/>
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="ItemsPanel">
			<ItemsPanelTemplate>
				<StackPanel Spacing="10"
							Orientation="Horizontal"/>
			</ItemsPanelTemplate>
		</Setter>
		
		<Setter Property="ItemContainerTheme">
			<ControlTheme TargetType="ListBoxItem">
				<Setter Property="Height" Value="27"/>
				<Setter Property="MinWidth" Value="50"/>
				<Setter Property="MaxHeight" Value="27"/>
				<Setter Property="CornerRadius" Value="13.5"/>
				<Setter Property="Background" Value="Transparent"/>
				<Setter Property="Transitions">
					<Transitions>
						<BrushTransition Property="Background"
										 Duration="0:0:.15"/>
					</Transitions>
				</Setter>
				
				<Setter Property="Template">
					<ControlTemplate>
						<Border Height="{TemplateBinding Height}"
								MinWidth="{TemplateBinding MinWidth}"
								MaxHeight="{TemplateBinding MaxHeight}"
								Background="{TemplateBinding Background}"
								CornerRadius="{TemplateBinding CornerRadius}">
							<StackPanel Spacing="8"
										Margin="12 0"
										Orientation="Horizontal">
								<Path Fill="{DynamicResource ColorBrush8}"
									  HorizontalAlignment="Left"
									  MaxHeight="16"
									  MaxWidth="16"
									  Name="PART_PathIcon"
									  Stretch="UniformToFill"
									  VerticalAlignment="Center"
									  Data="{TemplateBinding Tag}"
									  RenderTransform="{TemplateBinding (pca:PathIcon.Transform)}"/>
								
								<TextBlock Name="PART_Content"
										   VerticalAlignment="Center"
										   Text="{TemplateBinding Content}"
										   Foreground="{DynamicResource ColorBrush8}"/>
							</StackPanel>
						</Border>
					</ControlTemplate>
				</Setter>

				<Style Selector="^:pointerover">
					<Setter Property="Background" Value="#35FFFFFF"/>
				</Style>
				
				<Style Selector="^:selected">
					<Setter Property="Background" Value="White"/>
					
					<Style Selector="^ /template/ Path#PART_PathIcon">
						<Setter Property="Fill" Value="{DynamicResource ColorBrush3}"/>
					</Style>

					<Style Selector="^ /template/ TextBlock#PART_Content">
						<Setter Property="Foreground" Value="{DynamicResource ColorBrush3}"/>
					</Style>
				</Style>
			</ControlTheme>
		</Setter>
	</Style>
</Styles>