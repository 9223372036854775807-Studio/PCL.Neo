<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="using:PCL2.Neo.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Background="DarkCyan" Padding="20">
            <controls:MyCard />
        </Border>
    </Design.PreviewWith>

    <Style Selector="controls|MyCard">
        <Setter Property="Background" Value="#cdffffff" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                    <Grid Name="MainGrid">
                        <TextBlock Padding="20" Text="114514" />
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>

