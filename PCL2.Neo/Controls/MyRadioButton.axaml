<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:PCL2.Neo.Controls">
    <Design.PreviewWith>
        <controls:MyRadioButton />
    </Design.PreviewWith>

    <Style Selector="controls|MyRadioButton">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="PanBack" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{StaticResource ColorBrushSemiTransparent}" CornerRadius="13.5" MinHeight="27" MaxHeight="27">
                    <StackPanel Orientation="Horizontal">
                        <Path x:Name="ShapeLogo" HorizontalAlignment="Left" RenderTransformOrigin="50%,50%" Margin="12,0,0,0" Stretch="Uniform" Fill="{DynamicResource ColorBrush8}" MaxHeight="16" MaxWidth="16" VerticalAlignment="Center" />
                        <TextBlock x:Name="LabText" VerticalAlignment="Center" Foreground="{DynamicResource ColorBrush8}" Margin="8,0,12,0" UseLayoutRounding="False" />
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
